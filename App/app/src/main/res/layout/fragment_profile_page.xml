<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_main"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".profilePage">

    <!-- Assets Owned TextView -->
    <TextView
        android:id="@+id/text_stocksowned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="18dp"
        android:text="stocks"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Balance TextView -->
    <TextView
        android:id="@+id/text_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_stocksowned"
        android:layout_marginBottom="8dp"
        android:text="Balance: $0.00"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Heading TextView -->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_balance"
        android:layout_marginBottom="8dp"
        android:text="Deposit or Withdraw"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Subheading TextView -->
    <TextView
        android:id="@+id/tv_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_heading"
        android:layout_marginBottom="12dp"
        android:text="Enter the amount below"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <!-- EditText for amount input -->
    <EditText
        android:id="@+id/deposit_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subheading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounder_corner"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- Deposit Button -->
    <Button
        android:id="@+id/deposit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deposit_input"
        android:layout_marginTop="12dp"
        android:backgroundTint="#46DFFF"
        android:padding="12dp"
        android:text="Deposit"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Withdraw Button -->
    <Button
        android:id="@+id/withdraw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deposit_btn"
        android:layout_marginTop="12dp"
        android:backgroundTint="#46DFFF"
        android:padding="12dp"
        android:text="Withdraw"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Button bar at the bottom of the screen -->
    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_ai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#46DFFF"
            android:text="AI"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_invest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#46DFFF"
            android:text="Inv"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#46DFFF"
            android:text="Alert"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#46DFFF"
            android:text="Help"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_ratings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#46DFFF"
            android:text="Rate"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>
